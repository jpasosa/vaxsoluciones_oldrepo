<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>
            {% block title %}
                :: VAXSOLUCIONES ::
            {% endblock %}
        </title>
        
        
        {% block stylesheets %}
            <link href="{{ asset('bundles/vaxfront/css/main.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('bundles/vaxfront/css/slider-vertical.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('bundles/vaxfront/css/jquery.lightbox-0.5.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('bundles/vaxfront/css/jquery.nivo-slider.css') }}" type="text/css" rel="stylesheet" />
            <link rel="shortcut icon" type="image/icon" href="{{ asset('bundles/vaxfront/images/vax.ico') }}" />
        {% endblock %}
        

        {% block javascripts %}
            <script src="http://jqueryjs.googlecode.com/files/jquery-1.2.6.min.js" type="text/javascript"></script>
            <script src="{{ asset('bundles/vaxfront/js/slider-vertical.js') }}"></script>
            <script src="{{ asset('bundles/vaxfront/js/jquery.lightbox-0.5.js') }}"></script>
            <script src="{{ asset('bundles/vaxfront/js/jquery.nivo.slider.js') }}"></script>
        {% endblock %}
    
    </head>
    
    <body>
        
        <!-- Arrancar el slice del HEADER -->
        <script type="text/javascript">
                $(window).load(function() {
                    $('#slider').nivoSlider({
                    effect:'fade',
                    slices:4,
                    animSpeed:500,
                    pauseTime:3000,
                    directionNav:false, //Next & Prev
                    directionNavHide:false, //Only show on hover
                    controlNav:false, //1,2,3...
                    pauseOnHover:true, //Stop animation while hovering
                    beforeChange: function(){},
                    afterChange: function(){}
                    });
                });
        </script>
        
        <div class="out-container">        
            <div class="header">
                {% block header %}

                    <div id="wrapper">
                        <div class="slider-wrapper theme-default">
                            <div id="slider" class="nivoSlider">
                                <img src="{{ asset('bundles/vaxfront/images/banners/banner.jpg') }}" alt="banner" data-thumb="{{ asset('bundles/vaxfront/images/banners/banner.jpg') }}" width="980" height="170" />
                                <img src="{{ asset('bundles/vaxfront/images/banners/banner1.jpg') }}" data-thumb="{{ asset('bundles/vaxfront/images/banners/banner1.jpg') }}" alt=""  width="980" height="170" />
                                <img src="{{ asset('bundles/vaxfront/images/banners/banner2.jpg') }}" data-thumb="{{ asset('bundles/vaxfront/images/banners/banner2.jpg') }}" alt="" data-transition="slideInLeft"   width="980" height="170" />
                                <img src="{{ asset('bundles/vaxfront/images/banners/banner3.jpg') }}" data-thumb="{{ asset('bundles/vaxfront/images/banners/banner3.jpg') }}" alt="" title="#htmlcaption"   width="980" height="170" />
                            </div>
                        </div>
                    </div>











                {% endblock %}
            </div>
            {% block menu %}
                <div class="nav-container">
                    <nav>
                        <ul class="nav">
                            <li> <a href="{{ path('homepage') }}"> HOME </a> </li>
                            <li> <a href="{{ path('servicios') }}"> SERVICIOS </a> </li>
                            <li> <a href="{{ path('clientes') }}"> NUESTROS CLIENTES </a> </li>
                            <li> <a href="{{ path('ubiquiti') }}"> UBIQUITI </a> </li>
                            <li> <a href="{{ path('ofertas') }}"> OFERTAS </a> </li>
                            <li> <a href="{{ path('faq') }}"> FAQ </a> </li>
                            <li> <a href="{{ path('contacto') }}"> CONTACTO </a> </li>
                        </ul>
                    </nav>
                </div>
            {% endblock %}
            
            {% block submenu %}
                
                <!-- SI está en la home deben aparecer dos submenúes -->
                {% if (app.request.get('_route') == 'homepage'
                                    or app.request.get('_route') == 'quienesomos'
                                    or app.request.get('_route') == 'historia')  %}
                    <div class="sub-nav">
                        <nav>
                              <ul class="sub-nav">
                                    <li> <a href="{{ path('quienesomos') }}"> QUIENES SOMOS </a> </li>
                                    <li> <a href="{{ path('historia') }}"> HISTORIA </a> </li>
                              </ul>
                        </nav>
                    </div>
                {% endif %}
            
                <!-- SI está en servicios deben aparecer dos submenúes -->
                {% if (app.request.get('_route') == 'servicios'
                                    or app.request.get('_route') == 'seguridad'
                                    or app.request.get('_route') == 'placavideo'
                                    or app.request.get('_route') == 'notebook'
                                    or app.request.get('_route') == 'motherboard')  %}
                      <div class="sub-nav">
                        <nav>
                          <ul class="sub-nav">
                            <li> <a href="{{ path('motherboard') }}"> MOTHERBOARD </a> </li>
                            <li> <a href="{{ path('notebook') }}"> NOTEBOOK </a> </li>
                            <li> <a href="{{ path('placavideo') }}"> PLACA DE VIDEO </a> </li>
                            <li> <a href="{{ path('seguridad') }}"> SEGURIDAD </a> </li>
                          </ul>
                        </nav>
                      </div>
                {% endif %}

            {% endblock %}

            <div class="content">
                {% block body %}
                    
                    <div class="col-left">
                        {% block col_left %}
                            esto esta en la base
                        {% endblock %}
                    </div>

                    <div class="col-right">
                        {% include 'VaxFrontBundle:Page:slide-ofertas.html.twig' %}
                    </div>
                {% endblock %}                        
            </div>
            
            <div class="footer">
                {% block footer %}
                    aquí va el footer
                {% endblock %}
            </div>
    </body>
</html>