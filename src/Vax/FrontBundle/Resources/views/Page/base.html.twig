<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>
            {% block title %}
                :: VAXSOLUCIONES ::
            {% endblock %}
        </title>
        
        
        {% block stylesheets %}
            <link href="{{ asset('bundles/vaxfront/css/main.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('bundles/vaxfront/css/slider-vertical.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('bundles/vaxfront/css/jquery.lightbox-0.5.css') }}" type="text/css" rel="stylesheet" />
            <link href='http://fonts.googleapis.com/css?family=Quantico:400,400italic,700' rel='stylesheet' type='text/css'>
            <link href="{{ asset('bundles/vaxfront/css/jquery.nivo-slider.css') }}" type="text/css" rel="stylesheet" />
            <link rel="shortcut icon" type="image/icon" href="{{ asset('bundles/vaxfront/images/base/vax.ico') }}" />
        {% endblock %}
        

        {% block javascripts %}
            <script src="http://jqueryjs.googlecode.com/files/jquery-1.2.6.min.js" type="text/javascript"></script>
            <script src="{{ asset('bundles/vaxfront/js/slider-vertical.js') }}"></script>
            <script src="{{ asset('bundles/vaxfront/js/jquery.lightbox-0.5.js') }}"></script>
            <script src="{{ asset('bundles/vaxfront/js/jquery.nivo.slider.js') }}"></script>
        {% endblock %}
    
    </head>
    
    <body>
        <div class="out-container">        
            <div class="header">
                {% block header %}
                    <div class="inner-header">
                        <div class="logo">
                            <a href="{{ path('homepage') }}" > </a>
                        </div>
                        
                        {% block menu %}    <!-- MENU -->
                            <div class="nav-container">
                                <nav>
                                    <ul class="nav">
                                        <li> <a href="{{ path('homepage') }}"> Home </a> </li>
                                        <li> <a href="{{ path('nosotros') }}"> Nosotros </a> </li>
                                        <li> <a href="{{ path('servicios') }}"> Servicios </a> </li>
                                        <li> <a href="{{ path('clientes') }}"> Nuestros Clientes </a> </li>
                                        <li> <a href="{{ path('ubiquiti') }}"> Ubiquiti </a> </li>
                                        <li> <a href="{{ path('ofertas') }}"> Ofertas </a> </li>
                                        <li> <a href="{{ path('contacto') }}"> Contacto </a> </li>
                                    </ul>
                                </nav>
                            </div>
                        {% endblock %}
                        
                        {% block submenu %}  <!-- SUB-MENU -->
                            <!-- SI está en servicios deben aparecer cinco submenúes -->
                            {% if (app.request.get('_route') == 'servicios'
                                                or app.request.get('_route') == 'seguridad'
                                                or app.request.get('_route') == 'placavideo'
                                                or app.request.get('_route') == 'notebook'
                                                or app.request.get('_route') == 'motherboard'
                                                or app.request.get('_route') == 'faq')  %}
                                  <div class="sub-nav">
                                    <nav>
                                      <ul class="sub-nav">
                                        <li> <a href="{{ path('motherboard') }}"> Motherboard </a> </li>
                                        <li> <a href="{{ path('notebook') }}"> Notebook </a> </li>
                                        <li> <a href="{{ path('placavideo') }}"> Placa de Video </a> </li>
                                        <li> <a href="{{ path('seguridad') }}"> Seguridad </a> </li>
                                        <li> <a href="{{ path('faq') }}"> Faq (Preg. Frecuentes) </a> </li>
                                      </ul>
                                    </nav>
                                  </div>
                            {% endif %}

                        {% endblock %}  <!-- Termina bloque sub-menu -->

                        <!-- BANNERS -->
                        <div id="wrapper" class="banners">  
                            <div class="slider-wrapper theme-default">
                                <div id="slider" class="nivoSlider">
                                    <img src="{{ asset('bundles/vaxfront/images/banners/banner01.jpg') }}" alt="banner" data-thumb="{{ asset('bundles/vaxfront/images/banners/banner01.jpg') }}" width="940" height="280" />
                                    <img src="{{ asset('bundles/vaxfront/images/banners/banner02.jpg') }}" data-thumb="{{ asset('bundles/vaxfront/images/banners/banner02.jpg') }}" alt=""  width="940" height="280" />
                                    <img src="{{ asset('bundles/vaxfront/images/banners/banner03.jpg') }}" data-thumb="{{ asset('bundles/vaxfront/images/banners/banner03.jpg') }}" alt="" data-transition="slideInLeft"   width="940" height="280" />
                                    <img src="{{ asset('bundles/vaxfront/images/banners/banner04.jpg') }}" data-thumb="{{ asset('bundles/vaxfront/images/banners/banner04.jpg') }}" alt="" title="#htmlcaption"   width="940" height="280" />
                                </div>
                            </div>
                        </div> <!-- FIN banners -->
                    </div>  <!-- FIN inner-header -->
                {% endblock %}  <!-- FIN block HEADER -->
            </div> <!-- FIN class="header" -->

            <div class="content">
                {% block body %}
                    
                    {% if (app.request.get('_route') == 'homepage')  %} <div class="home-col-left">
                    {% else  %} <div class="col-left">
                    {% endif  %}
                    {% block col_left %}  <!-- COL-LEFT --> <!-- pongo blocke porq son todos distintos -->
                        esto esta en la base
                    {% endblock %}
                    </div> <!-- Cierro el col-left -->


                    {% if (app.request.get('_route') == 'homepage')  %} <div class="home-col-right">
                    {% else  %} <div class="col-right">
                    {% endif  %}
                    {% include 'VaxFrontBundle:Page:slide-ofertas.html.twig' %}
                    </div> <!-- Cierro el col-right -->

                {% endblock %}                        
            </div>
            
            <!-- FOOTER -->
            {% include 'VaxFrontBundle:Page:footer.html.twig' %}
        </div> <!-- cierro out-container -->
    </body>
</html>