{% extends 'VaxFrontBundle:Page:base.html.twig' %}

{% block title %}
  :: VAX SOLUCIONES ::
{% endblock %}

{% block contacto %}
    
    <div class="left">
        <h2 class="title"> CONTACO </h2>
        <div class="description">
            Podés contactarnos telefónicamente, de Lunes a Viernes de 15hs a 20hs, también vía e-mail o utilizando el siguiente formulario de contacto.
        </div>
        <div class="box-subtitles"> <!-- telefono -->
            <img src="{{ asset('bundles/vaxfront/images/contacto/xxxx.jpg') }}" alt=""  width="20" height="20" />
            <h3 class="title"> TELÉFONO </h3>
            <div class="dato"> (5411) 4585.4041 </div>
        </div>
        <div class="box-subtitles"> <!-- celular -->
            <img src="{{ asset('bundles/vaxfront/images/contacto/xxxx.jpg') }}" alt=""  width="20" height="20" />
            <h3 class="title"> CELULAR </h3>
            <div class="dato"> (15) 5497.2228 </div>
        </div>
        <div class="box-subtitles"> <!-- email -->
            <img src="{{ asset('bundles/vaxfront/images/contacto/xxxx.jpg') }}" alt=""  width="20" height="20" />
            <h3 class="title"> E-MAIL </h3>
            <div class="dato"> info@vaxsoluciones.com.ar </div>
        </div>


    </div>

    <div class="right">
        <div class="box-form">
            <form action="{{ path('contacto') }}" method="post" {{ form_enctype(form) }} class="contact-form">
                
                <div class="izq">
                    {{ form_errors(form) }}

                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.subject) }}
                </div>

                <div class="der">
                    {{ form_row(form.body) }}

                    {{ form_rest(form) }}
                    <input type="submit" value="Submit" />
                </div>

            </form>
        </div>
        <div class="bottons">
            <a class="msn" href="#">

            </a>
            <a class="facebook" href="#">

            </a>
        </div>
    </div>





{% endblock %}


